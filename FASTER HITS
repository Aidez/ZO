repeat wait() until game.Players ~= nil
repeat wait() until game.Players.LocalPlayer ~= nil
repeat wait() until game.Players.LocalPlayer.Character ~= nil
repeat wait() until game.Players.LocalPlayer.Character:FindFirstChild("Humanoid")

local function SpeedUpTracks(track)
    if not string.find(track.Name, "%a") or track.Name == "Equip" then
        track:AdjustSpeed(2)
    elseif track.Name == "Dequip" then
        track:AdjustSpeed(5)
    end
end

game.Players.LocalPlayer.Character.Humanoid.AnimationPlayed:Connect(SpeedUpTracks)

game.Players.LocalPlayer.CharacterAdded:Connect(function(char)
    repeat wait() until char:FindFirstChild("Humanoid")
    char.Humanoid.AnimationPlayed:Connect(SpeedUpTracks)
end)

